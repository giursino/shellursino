# per evitare di includere se stesso
.gitattributes !filter !diff

# qualsiasi file con estensione key
*.key filter=git-crypt diff=git-crypt

# tutte le chiavi standard di OpenSSH
id_rsa* filter=git-crypt diff=git-crypt

# credenziali plotly
.plotly/.credentials filter=git-crypt diff=git-crypt

# credenziali samba
smbcredentials.* filter=git-crypt diff=git-crypt

# credenziali siti FTP con Filezilla
.config/filezilla/sitemanager.xml filter=git-crypt diff=git-crypt
